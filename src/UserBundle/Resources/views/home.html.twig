{% extends "@App/base_layout.html.twig" %}

{% set active_item = 'driver_card' %}

{% block content %}
  <table class="ui table">
    <thead class="center aligned">
      <tr>
        <th colspan="3">{% trans %}Last transports{% endtrans %}</th>
      </tr>
    </thead>
    <tbody>
      {% if transports %}
        {% for transport in transports %}
          <tr>
            <td class="center aligned">{{ transport.endDate|date('Y-m-d') }}<br/>{{ transport.endDate|date('H:i') }}</td>
            <td class="collapsing"><i class="truck large circular inverted blue icon"></i></td>
            <td>
              <b>{% trans %}Realized transport with ID{% endtrans %}: {{ transport.transportId }}</b><br/>
              {% trans %}Transport a cargo{% endtrans %} <b>{{ transport.cargo|capitalize }}</b> {% trans %}from{% endtrans %} <b>{{ transport.startCity|capitalize }}</b> {% trans %}to{% endtrans %} <b>{{ transport.endCity|capitalize }}</b>.<br/>
              <span id="details-1">{% trans %}Mileage{% endtrans %} <b>{{ transport.distance }} KM</b> {% trans %}with a cargo weighing{% endtrans %} <b>{{ transport.weight }} KG</b></span><br>
              <a style="cursor: pointer;"><i class="add square icon"></i>{% trans %}Details{% endtrans %}</a>
            </td>
          </tr>
        {% endfor %}
        {% else %}
          <tr>
            <td><b>Brak transport√≥w!</b></td>
          </tr>
      {% endif %}
    </tbody>
  </table>
{% endblock %}
