{% extends "@App/base_layout.html.twig" %}

{% block navbar %}
  <div class="ui blue inverted menu">
    <a class="item" href="{{ path('home') }}"><i class="suitcase icon"></i>Karta kierowcy</a>
    <a class="item" href="newTransport.php"><i class="add square icon"></i>Zgłoś nowy transport</a>
    <a class="item" href="myTransports.php"><i class="cube icon"></i>Twoje transporty</a>
    <a class="item" href="listDrivers.php"><i class="world icon"></i>Lista kierowców</a>
    <a class="item" href="statsDrivers.php"><i class="area chart icon"></i>Statystyki kierowców</a>
    <div class="right menu">
      <div class="ui dropdown item">
        <i class="user icon"></i>Witaj, {{ app.user.username }}<i class="dropdown icon"></i>
        <div class="ui menu">
          <a class="item" href=""></i>Zobacz profil</a>
          <div class="ui divider"></div>
          <a class="active item" href="{{ path('employee_add') }}"></i>Dodaj pracownika</a>
