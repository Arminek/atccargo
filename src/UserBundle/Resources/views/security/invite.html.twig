          <a class="item" href="{{ path('logout') }}">Wyloguj się</a>
        </div>
      </div>
    </div>
  </div>
{% endblock %}

{% block content %}
  <div class="ui center aligned grid">
    <div class="six wide column">
      <h1 class="ui blue image header">
        <i class="blue square add icon"></i>
        <div class="content">
          Dodawanie pracownika
        </div>
      </h1>

      <div class="ui stacked segment">
        {{ form_start(form, {'attr': {'class': 'ui large form'}}) }}
          <div class="field">
            <div class="ui left icon input">
              <i class="mail icon"></i>
              {{ form_row(form.email) }}
            </div>
          </div>
          <div class="field">
            <div class="ui selection dropdown">
              {{ form_row(form.role) }}
              <i class="dropdown icon"></i>
              <div class="default text">Stanowisko</div>
              <div class="menu">
                <div class="item">Szef</div>
                <div class="item">V-CE Szef</div>
                <div class="item">Dyspozytor</div>
                <div class="item">Kierowca</div>
                <div class="item">Okres testowy</div>
              </div>
            </div>
          </div>
          <input type="submit" value="Dodaj pracownika" class="ui blue fluid large button">
        {{ form_end(form) }}
      </div>
    </div>
  </div>
{% endblock %}

