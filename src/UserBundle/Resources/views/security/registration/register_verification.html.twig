{% extends "@App/base_layout.html.twig" %}

{% form_theme form '@App/form/fields.html.twig' %}

{% block content %}
  <div class="ui center aligned segment">
    <div class="ui center aligned grid">
      <div class="ui six wide column">
        <h2 class="ui blue image header">
          <img src="{{ asset('images/logo.png') }}" class="image">
          <div class="content">
            {% trans %}Enter registration code{% endtrans %}
          </div>
        </h2>
        {{ form_start(form, {'attr': {'class': 'ui large form'}}) }}
          <div class="ui stacked segment">
            <div class="field">
              <div class="ui left icon input">
                <i class="mail icon"></i>
                {{ form_row(form.email) }}
              </div>
            </div>
            <div class="field">
              <div class="ui left icon input">
                <i class="key icon"></i>
                {{ form_row(form.activationCode) }}
              </div>
            </div>

            {% for flash_message in app.session.flashBag.get('notice') %}
              <div class="ui negative message">
                {{ flash_message|trans }}
              </div>
            {% endfor %}

            <button type="submit" class="ui fluid large blue submit button">{% trans %}Check code{% endtrans %}</input>
          </div>
        {{ form_end(form) }}
      </div>
    </div>
  </div>
{% endblock %}